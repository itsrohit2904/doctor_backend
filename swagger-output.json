{
  "swagger": "2.0",
  "info": {
    "title": "Doctor Appointment API",
    "description": "API documentation for the Doctor Appointment system.",
    "version": "1.0.0"
  },
  "host": "doctor-backend-1-pbd3.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/login": {
      "post": {
        "description": "Admin login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "admin@example.com"
                },
                "password": {
                  "example": "password"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Admin logged in successfully."
          }
        }
      }
    },
    "/add-doctor": {
      "post": {
        "description": "Add a new doctor (Admin only).",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Dr. Smith"
                },
                "email": {
                  "example": "drsmith@example.com"
                },
                "password": {
                  "example": "password"
                },
                "speciality": {
                  "example": "Cardiologist"
                },
                "degree": {
                  "example": "MBBS, MD"
                },
                "experience": {
                  "example": "10 years"
                },
                "about": {
                  "example": "Expert in cardiac surgeries."
                },
                "fees": {
                  "example": 500
                },
                "address": {
                  "example": "123 Clinic Road"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Doctor added successfully."
          }
        }
      }
    },
    "/appointments": {
      "get": {
        "description": "Get all appointments (Admin or Doctor only).",
        "responses": {
          "200": {
            "description": "List of appointments."
          }
        }
      }
    },
    "/cancel-appointment": {
      "post": {
        "description": "Cancel an appointment.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "example": "12345"
                },
                "appointmentId": {
                  "example": "67890"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Appointment cancelled successfully."
          }
        }
      }
    },
    "/all-doctors": {
      "get": {
        "description": "Get all doctors (Admin only).",
        "responses": {
          "200": {
            "description": "List of all doctors."
          }
        }
      }
    },
    "/change-availability": {
      "post": {
        "description": "Change doctor availability (Admin or Doctor only).",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "docId": {
                  "example": "12345"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Availability changed successfully."
          }
        }
      }
    },
    "/dashboard": {
      "get": {
        "description": "Get admin or doctor dashboard details.",
        "responses": {
          "200": {
            "description": "Dashboard details."
          }
        }
      }
    },
    "/list": {
      "get": {
        "description": "Get list of doctors.",
        "responses": {
          "200": {
            "description": "List of doctors."
          }
        }
      }
    },
    "/complete-appointment": {
      "post": {
        "description": "Mark an appointment as complete (Doctor only).",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "docId": {
                  "example": "12345"
                },
                "appointmentId": {
                  "example": "67890"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Appointment marked as complete."
          }
        }
      }
    },
    "/profile": {
      "get": {
        "description": "Get doctor profile (Doctor only).",
        "responses": {
          "200": {
            "description": "Doctor profile details."
          }
        }
      }
    },
    "/update-profile": {
      "post": {
        "description": "Update user profile.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "example": "12345"
                },
                "name": {
                  "example": "John Doe"
                },
                "phone": {
                  "example": "1234567890"
                },
                "address": {
                  "example": "123 Main Street"
                },
                "dob": {
                  "example": "1990-01-01"
                },
                "gender": {
                  "example": "Male"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Profile updated successfully."
          }
        }
      }
    },
    "/register": {
      "post": {
        "description": "Register a new user.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "John Doe"
                },
                "email": {
                  "example": "johndoe@example.com"
                },
                "password": {
                  "example": "password"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User registered successfully."
          }
        }
      }
    },
    "/get-profile": {
      "get": {
        "description": "Get user profile (User only).",
        "responses": {
          "200": {
            "description": "User profile details."
          }
        }
      }
    },
    "/book-appointment": {
      "post": {
        "description": "Book an appointment (User only).",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "example": "12345"
                },
                "docId": {
                  "example": "67890"
                },
                "slotDate": {
                  "example": "2024-12-15"
                },
                "slotTime": {
                  "example": "10:30 AM"
                }
              }
            }
          }
        ],
        "responses": {

          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}